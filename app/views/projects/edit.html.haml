.form
  .row
    .medium-12.columns
      %h1
        = "Update Project #{@project.name}"

  .row
    .medium-6.columns
      = form_for @project, method: :patch do |f|
        %label
          %strong Project Name
        = f.text_field :name

        %label
          %strong Description
        = f.text_field :description

        .actions
          = f.submit "Update", class: 'btn waves-effect waves-light brand-colour'


    .medium-6.columns
      %h3 New project will have sprints automatically generated in future
