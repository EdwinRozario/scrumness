.row			
	.small-10.columns.card
		%h3 Projects

		%table
			%thead
				%tr
					%th{:width => "150"} Project
					%th{:width => "350"} Description
					%th{:width => "75"} View
			%tbody
				- @projects.each do |project|
					%tr
						%td 
							= project.name
						%td 
							= project.description
						%td 
							= link_to "Show", project_path(project.id)

	.small-2.large.columns
		= link_to new_project_path, :class => "btn-floating btn-large waves-effect waves-light brand-colour", title: 'Add New Project' do
			%i.material-icons add							


