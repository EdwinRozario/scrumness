.contain-to-grid.sticky
  %nav.top-bar{'data-topbar' => true, role: "navigation"}
    %ul.title-area
      %li.name
        %h1= link_to t('site_title'), root_url
      %li.toggle-topbar.menu-icon= link_to "Menu", '#'

    %section.top-bar-section
      %ul.left

                
      %ul.right.nav-options
        / %li= link_to 'Contact', '/contact'
        / %li= link_to 'About', '/about'

        - if user_signed_in?
          - if controller_name == 'projects'
            %li.has-dropdown
              %a= action_name == 'show' ? 'Manage Project' : 'Manage Projects'
              %ul.dropdown
                - if action_name == 'show'
                  %li= link_to 'Edit this project', edit_project_path(@project.id)
                  %li= link_to 'Delete this project', edit_project_path(@project.id), data: {confirm: "This will permenantly delete project #{@project.name}. Are you sure?"}
                  %li= link_to 'Back to projects list', projects_path
                - else
                  %li= link_to 'Add Project', new_project_path

            - if controller_name == 'projects' && action_name == 'show'
              %li.has-dropdown
                %a= 'Manage Sprints'
                %ul.dropdown
                  %li= link_to 'Create New Sprint', new_project_sprint_path(project_id: @project.id)
                  %li= link_to 'Sprints List', project_sprints_path(project_id: @project.id) 

          %li.has-dropdown
            %a= current_user.email.split('@').first
            %ul.dropdown
              %li= link_to 'Edit profile', edit_user_registration_path
              %li= link_to "Logout", destroy_user_session_path, method: :delete      
        - else 
          %li= link_to "Sign up", new_user_registration_path
          %li= link_to "Login", new_user_session_path

